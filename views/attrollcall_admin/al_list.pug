extends ./base.pug
block content 
  h3= fn
  a(href=`/internal/attrollcall_admin/al_list/${act_c_id}/add?fn=${fn}`, class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add lesson
  table
    for book in books
      tr 
        td
          .media
            a(href=`/internal/attrollcall_admin/al_list/${act_c_id}/view/${book.al_id}?fn=${book.lesson}`)
              .media-left
                  //img(src=book.imageUrl || "http://placekitten.com/g/128/192")
              .media-body
                h4
                  span= book.al_id
                  span 	&nbsp;	&nbsp;
                  span= book.al_datetime
                  span 	&nbsp;	&nbsp;
                  span= book.lesson
        td          
          a(href=`/internal/attrollcall_admin/aas_list/${book.act_c_id}/${book.al_id}/edit?fn=${book.lesson}`, class='btn btn-success btn-sm')
            i.glyphicon.glyphicon-plus
            span  Add STUDENT      
      
  if !books.length
    p No activity course found.

  

