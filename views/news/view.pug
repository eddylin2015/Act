extends ./base.pug

block content
  h3 NEWS
  .btn-group
    a(href=`/news/item/${book.iid}/edit`, class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit 

  .media
    .media-left
      img(src=book.imageUrl || "/images/deptworklog.jpg")
    .media-body
      h4= book.A
        | &nbsp;at&nbsp;
        small= book.checkdate
      h5 By #{book.author||'unknown'}
      table#tbl
        tr
          td 編號
          td
            pre(class="pre-scrollable")= book.iid

        tr 
          td 標題
          td
            pre(class="pre-scrollable")= book.title

        tr
          td 描述
          td
            pre(class="pre-scrollable")= book.description
        tr
          td link
          td
            pre(class="pre-scrollable")= book.link
        tr
          td category
          td
            pre(class="pre-scrollable")= book.category

        tr
          td pubDate
          td
            pre(class="pre-scrollable")= book.pubDate

        tr
          td author
          td
            pre(class="pre-scrollable")= book.author

        tr
          td guid
          td
            pre(class="pre-scrollable")= book.guid
        tr
          td pubFlag
          td
            pre(class="pre-scrollable")= book.pubFlag

