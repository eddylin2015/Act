extends ./base.pug

block content
  h3 Book
    small

  .btn-group
    a(href=`/internal/attrollcall_users/${book.stud_ref}/edit`, class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit User
    a(href=`/internal/attrollcall_users/${book.stud_ref}/delete`, class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete User

  .media
    .media-body
      h4= book.stud_ref
      h4= book.dsej_ref
      h4= book.c_name
      h4= book.curr_class
      h4= book.curr_seat
        | &nbsp;
        small= book.key_md