doctype html
html
  head
    title= title
    link(rel="icon" href="/favicon.ico")
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/signin.css')
    link(rel='stylesheet', href='/stylesheets/main.css')
    script(src='/javascripts/jquery.js')
    script(src='/javascripts/bootstrap.js')
  body
    .container
      form(class="form-signin",  method="post")
        h2(class="form-signin-heading") Please sign in
        label(for="inputActID", class="sr-only") Activity ID
        input(type="text" ,id="inputActID", class="form-control", name="ActID", placeholder="ActID", value=act_c_id, required, autofocus)
        label(for="inputEmail", class="sr-only") Activity Name
        input(type="text" ,id="inputAct", class="form-control", name="Act", placeholder="Act", value=act, required, autofocus)
        label(for="inputPassword", class="sr-only") Password
        input(type="password", id="inputPassword", class="form-control", name="password", placeholder="Password", value=ppwd, required)
        button(class="btn btn-lg btn-primary btn-block", type="submit") Sign in
