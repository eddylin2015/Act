extends ./base.pug
block content 
  h3 列表 #{fn}
  input(class="form-control", id="myInput", type="text", placeholder="Search..")  
  table(class="table table-inverse")#desc
    tr
      th classno 
      th seat 
      th c_name 
      th rollcall 
      th rollcall_time 
      th rollcall_by
    each book in books
      tr 
        td= book.classno
        td= book.seat 
        td= book.c_name 
        td= book.rollcall 
        td= book.rollcall_time 
        td= book.rollcall_by

  if !books.length
    p No activity course found.

  -var prePageToken = nextPageToken - 200 > 0 ? nextPageToken - 200 : 0
  nav
    ul.pager
      li
        a(href=`?pageToken=${encodeURIComponent(prePageToken)}`,style="color:black") Prev
      if nextPageToken
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`,style="color:black") More    


  script.
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#desc tr").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });      
