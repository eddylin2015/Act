extends ./base.pug

block content
  h3 Job Note
  meta(http-equiv="refresh", content="300")
  a(href="/internal/localnews/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add Work Log
  table#desc
    each book in books
      tr
        td
          .media
            a(href=`/internal/localnews/${book.id}`, style="color: black; ")
              .media-left
                img(src=book.imageUrl || "/images/deptworklog.jpg")
              .media-body
                h4(  style="color: white;background-color:#222; ")= (book.id + "|" + book.title)
                  if book.deptlog>0
                    span(class="glyphicon glyphicon-ok")
                  else if book.deptlog<0
                    span(class="glyphicon glyphicon-minus-sign")
                  else
                    span(class="glyphicon glyphicon-pencil")
      tr
        td
          small= book.newstxt
          small= book.author

  if !books.length
    p No work log found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More
