doctype html
html
  head
    title= title
    link(rel="icon" href="/favicon.ico")
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/signin.css')
    link(rel='stylesheet', href='/stylesheets/main.css')
    script(src='/javascripts/jquery.js')
    script(src='/javascripts/bootstrap.js')
  body
    .container
      form(class="form-signin", action=`/login?redirect=${redirect}`, method="post")
        h2(class="form-signin-heading") Please sign in
        label(for="inputEmail", class="sr-only") User
        input(type="text" ,id="inputEmail", class="form-control", name="username", placeholder="User", value=puser, required, autofocus)
        label(for="inputPassword", class="sr-only") Password
        input(type="password", id="inputPassword", class="form-control", name="password", placeholder="Password", value=ppwd, required)
        div(class="checkbox")
          label
            input(type="checkbox",name="Theme",value="8") 
            span Default Mode
          label
            input(type="checkbox",name="Theme",value="9") 
            span Dark Mode
            //input(type="checkbox", value="remember-me") Remember me
        button(class="btn btn-lg btn-primary btn-block", type="submit") Sign in
